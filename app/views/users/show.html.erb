<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-center"><%= image_tag @user.image.url %></div>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
  	<div class="card">
      <div class="card-header">
        <h2 class="card-title"><%= @user.name %></h2>
      </div>
      <div class="card-body">
      	<p class="card-text"><%= simple_format @user.introduce %></p>
      </div>
    </div>
 	</div>   
</div>
<div class="d-flex justify-content-end">
	<% if current_user == @user %>
		<h5><%= link_to '設定', edit_user_path(current_user), class: 'btn btn-secondary mt-2' %></h5>
	<% end %>
</div>
